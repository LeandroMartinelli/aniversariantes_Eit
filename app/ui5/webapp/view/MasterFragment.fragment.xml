<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified" >
    <Panel
        headerText="{i18n>panel1}"
        expanded="true"
        content="{ path: 'funcionario>/Funcionarios' }" >
        <content>
            <GenericTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                header="{funcionario>ProductName}"
                backgroundImage="{= ${funcionario>Status} === 'B' ? 'http://noticias.universia.cl/cl/images/investigacion/c/co/com/comunicacion-interna-empresas-importancia-noticia.jpg' 
                                : 'http://brainstormindia.com/innerimages/sap-consulting.png' }"
		        frameType="TwoByOne"
                press="onPress">
                <TileContent
                    footer="{funcionario>Quantity}">
                    <NewsContent
						contentText="{funcionario>ShipperName}"
						subheader="{funcionario>ShippedDate}" />
                </TileContent>
            </GenericTile>
        </content>
    </Panel>
</core:FragmentDefinition>