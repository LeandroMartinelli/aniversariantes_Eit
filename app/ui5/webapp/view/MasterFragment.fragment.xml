<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core" >
    <Panel
        headerText="{i18n>panel1}"
        expanded="true"
        background="transparent"
        content="{ path: '/' }" >
        <content>
            <GenericTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                header="{nome}"
                backgroundImage="{= ${foto} === '' ? 'http://noticias.universia.cl/cl/images/investigacion/c/co/com/comunicacion-interna-empresas-importancia-noticia.jpg' 
                                : 'http://brainstormindia.com/innerimages/sap-consulting.png' }"
		        frameType="TwoByOne"
                press="onPress">
                <TileContent>
                    <NewsContent
						contentText="{funcao}"
						subheader="{nascimento}" />
                </TileContent>
            </GenericTile>
        </content>
    </Panel>
</core:FragmentDefinition>